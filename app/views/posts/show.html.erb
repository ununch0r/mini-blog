<article class="post">
  <section class="post-head">
    <h1><%= @post.title%></h1>
    <small>
      <time><%= @post.created_at.to_date.strftime("%d %B, %Y") %>
      </time>
      |
      <%= link_to 'Change', edit_post_path(@post) %>
      |
      <%= link_to 'Delete', post_path(@post), method: :delete, date: {confirm:'Are you sure?'} %>
    </small>
  </section>
  <section class="post-body">
    <%= image_tag @post.image.url, class: 'img-show' if @post.image?  %>
    <%= @post.body %>
  </section>
</article>
